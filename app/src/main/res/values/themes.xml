<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitEmUp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="AppStandardText">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/charcoal</item>
    </style>

    <style name="TitleText" parent="AppStandardText">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/quick_silver_color</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="SuperLargeText" parent="TitleText">
        <item name="android:textSize">@dimen/text_size_super_large</item>
    </style>

    <style name="SmallText" parent="AppStandardText">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="EmphasizedAppStandardText">
        <item name="android:textColor">@color/mint_blue</item>
    </style>

    <style name="appButton" parent="AppStandardText">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>
</resources>